def SLAVE = AMBIENTE.equals('PRODUCAO') ? 'master' : 'hom01'
def BRANCH = AMBIENTE.equals('PRODUCAO') ? 'master' : 'develop'
def json = null

node(SLAVE) {

    stage ('Preparando') {
        cleanWs()
        git branch: String.valueOf(BRANCH), credentialsId: 'GITLAB', url: '${GITURL}'
        json = readJSON file: 'package.json'
    }

    stage ('App Build') {
        sh 'npm install'
        if(json.version.contains('-SNAPSHOT')) {
            sh 'npm run set-beta'
        }
        sh 'npm run build'
    }

    stage ('Docker Build') {
        sh 'docker build --build-arg BUILD_FOLDER=build -t ' + json.name + ' .'
    }

    stage ('Interrompendo o Container') {
        sh 'docker ps > result'
        def result = readFile('result').trim()
        if(result.contains(json.name)) {
            sh 'docker stop ' + json.name
        }
        
        sh 'docker ps -a > result'
        result = readFile('result').trim()
        if(result.contains(json.name)) {
            sh 'docker rm ' + json.name
        }
    }        
    
    stage ('Iniciando o Container') {
        sh 'docker volume create ' + json.name + '-data'
        sh 'docker run -d --name ' + json.name + ' -p ' + PORTA + ' ' + json.name
    }

}

